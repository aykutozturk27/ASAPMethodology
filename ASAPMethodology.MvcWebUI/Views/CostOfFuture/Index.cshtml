@model ASAPMethodology.Entities.Dtos.CostOfFutureAddDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="CostOfFuture" asp-action="Index" method="post">
    <div class="form-group">
        <label class="col-sm-4 form-label" asp-for="@Model.ExpenseTypeId">Gider Tipi</label>
        @*<div class="col-sm-2 form-check form-check-inline">
        <input type="checkbox" class="form-check-input" id="chkInsurance">
        <label class="form-check-label" for="chkInsurance">Sigorta</label>
        </div>
        <div class="col-sm-2 form-check form-check-inline">
        <input type="checkbox" class="form-check-input" id="chkPolicy">
        <label class="form-check-label" for="chkPolicy">Kasko</label>
        </div>
        <div class="col-sm-2 form-check form-check-inline">
        <input type="checkbox" class="form-check-input" id="chkRent">
        <label class="form-check-label" for="chkRent">Kira</label>
        </div>*@
        @foreach (var item in Model.ExpenseTypeEnums)
        {
            var expenseTypeIds = "chk" + item;
            <div class="col-sm-2 form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="@expenseTypeIds" name="ExpenseType" value="@item">
                <label class="form-check-label" for="@expenseTypeIds">@item</label>
            </div>
        }
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.CardName" class="col-sm-4 form-label">Muhattap Adı</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="@Model.CardName" placeholder="Muhattap Adı">
            <span asp-validation-for="@Model.CardName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.CardLastName" class="col-sm-4 form-label">Muhattap Soyadı</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="@Model.CardLastName" placeholder="Muhattap Soyadı">
            <span asp-validation-for="@Model.CardLastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.PolicyNum" class="col-sm-4 form-label">Poliçe/Sözleşme No</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="@Model.PolicyNum" placeholder="Poliçe/Sözleşme No">
            <span asp-validation-for="@Model.PolicyNum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.PolicyBegDate" class="col-sm-4 form-label">Başlangıç Tarihi</label>
        <div class="col-sm-8">
            <input type='date' class="form-control" asp-for="@Model.PolicyBegDate" value="@DateTime.Now"/>
            <span asp-validation-for="@Model.PolicyBegDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.InstallementNo" class="col-sm-4 form-label">Taksit Sayısı</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="@Model.InstallementNo" placeholder="Taksit Sayısı">
            <span asp-validation-for="@Model.InstallementNo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.PolicyEndDate" class="col-sm-4 form-label">Bitiş Tarihi</label>
        <div class="col-sm-8">
            <input type='date' class="form-control" asp-for="@Model.PolicyEndDate" value="@DateTime.Now"/>
            <span asp-validation-for="@Model.PolicyEndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="@Model.Comments" class="col-sm-4 form-label">Açıklamalar</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="@Model.Comments" placeholder="Açıklamalar">
        </div>
    </div>
    <div class="form-group mt-3">
        <label class="col-sm-4 form-label">Hesaplama Yöntemi</label>
        @*<div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radioDaily">
        <label class="form-check-label">Günlük</label>
        </div>
        <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radioMontly">
        <label class="form-check-label">Aylık</label>
        </div>*@
        @foreach (var item in Model.MethodologyTypes)
        {
            var methodologyId = "radio" + item;
            <div class="form-check form-check-inline">
                <input type="checkbox" class="form-check-input" id="@methodologyId" name="MethodologyRadioOptions" value="@item">
                <label class="form-check-label" for="@methodologyId">@item</label>
            </div>
        }
    </div>
    <div class="form-group mt-3 d-grid gap-2 col-4 mx-auto">
        <button type="submit" class="btn btn-primary">Hesapla</button>
    </div>
</form>